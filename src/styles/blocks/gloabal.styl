html,
body
  padding 0
  margin 0

  box-sizing border-box

body
  font-family 'HelveticaNeueCyr-Light'
  height auto

.content-wrapper
  width 720px
  margin 0 auto
  padding-bottom 1px

::-webkit-scrollbar { width: 5px; height: 3px;}
::-webkit-scrollbar-button {  background-color: #381a50; display:none; }
::-webkit-scrollbar-track {  background-color: #999;}
::-webkit-scrollbar-track-piece { background-color: #ccc7cb;}
::-webkit-scrollbar-thumb { height: 10px; background-color: #c20672; border-radius: 10px;}
::-webkit-scrollbar-corner { background-color: #999;}
::-webkit-resizer { background-color: #666;}
